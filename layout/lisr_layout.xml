<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorPrimCc"
    android:padding="10dp"
    tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/His1Image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/His1Image"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:useDefaultMargins="false"
        android:columnCount="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/His1Titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorChoc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/title"
            />
        <TextView
            android:id="@+id/His1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neutre"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="false"
        android:rowCount="1"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:columnCount="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/His1Resum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/auth"
            android:textColor="@color/colorPrim"
            />
        <TextView
            android:id="@+id/His1Aut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/neutre"
            />
    </GridLayout>
    <GridLayout
        android:useDefaultMargins="false"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/His1nb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/nbpage"
            android:textColor="@color/colorPrim"
            />
        <TextView
            android:id="@+id/His1nbpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/neutre"
            />
    </GridLayout>
    </GridLayout>
</RelativeLayout>


</LinearLayout>
